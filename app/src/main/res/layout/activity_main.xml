<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/sendButton2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onNotify2Clicked"
        android:text="Notify2"
        app:layout_constraintTop_toBottomOf="@+id/sendButton"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/titleMessage"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="หัวข้อ"
        android:inputType="text|textPersonName"
        android:text="title"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/messageText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="ส่งข้อความ"
        android:inputType="text|textPersonName"
        android:text="message"
        app:layout_constraintTop_toBottomOf="@+id/titleMessage"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="onNotify1Clicked"
        android:text="Notify1"
        app:layout_constraintTop_toBottomOf="@+id/messageText"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>